<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".authentication.fragment_o_t_p">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/backfromotptosignin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        app:navigationIcon="@drawable/backkkarrow"
        app:title="OTP verification"
        app:titleTextColor="@color/black"
        app:titleMarginStart="23dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/backfromotptosignin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We have sent a verification code to"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:paddingBottom="6dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/numberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- OTP Boxes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:weightSum="6"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Repeatable block -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/OtpInputStyle"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/otp1"
                    style="@style/OtpEditTextStyle"
                    android:hint="Digit 1"
                    android:contentDescription="Enter OTP digit 1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/OtpInputStyle"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/otp2"
                    style="@style/OtpEditTextStyle"
                    android:hint="Digit 2"
                    android:contentDescription="Enter OTP digit 2" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/OtpInputStyle"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/otp3"
                    style="@style/OtpEditTextStyle"
                    android:hint="Digit 3"
                    android:contentDescription="Enter OTP digit 3" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/OtpInputStyle"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/otp4"
                    style="@style/OtpEditTextStyle"
                    android:hint="Digit 4"
                    android:contentDescription="Enter OTP digit 4" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/OtpInputStyle"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/otp5"
                    style="@style/OtpEditTextStyle"
                    android:hint="Digit 5"
                    android:contentDescription="Enter OTP digit 5" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/OtpInputStyle"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/otp6"
                    style="@style/OtpEditTextStyle"
                    android:hint="Digit 6"
                    android:contentDescription="Enter OTP digit 6" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Submit Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/inputOtpB"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/phnbuttonshape"
            android:backgroundTint="@color/cornflower_blue"
            android:text="Enter"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:minWidth="200dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:layout_gravity="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


