<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- Image Slider -->
            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/ivImageSldier"
                android:layout_width="313dp"
                android:layout_height="117dp"
                app:iss_auto_cycle="false"
                app:layout_constraintDimensionRatio="1.6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvProductTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Kolkata Fresh Milk with 0 Fat"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/aref_ruqaa_ink"
                app:layout_constraintTop_toBottomOf="@id/ivImageSldier"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Quantity -->
            <TextView
                android:id="@+id/tvProductQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250ml"
                android:textSize="14sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/tvProductTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp" />

            <!-- Price -->
            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$20"
                android:textSize="14sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/tvProductQuantity"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp" />
            <!-- Stock Status -->
            <TextView
                android:id="@+id/tvStockStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Stock"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:padding="4dp"
                android:background="@drawable/bg_stock_status"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/tvProductPrice"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Edit Button -->
            <TextView
                android:id="@+id/tvEditText"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:background="@drawable/edit_text_bg"
                android:text="Edit"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivImageSldier" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
